//---------------------- [Starting heights] --------------------------
Int xm,ym,zm     //---> Data for mouse
Set rocketx=100 
Set rockety=100
Set ufox=900
Set ufoy=900
Set colorufo=1
Set colorrocket=50
//--------------------------- [Assets] -------------------------------

Do
Read mouse(xm,ym,zm)
Hidemouse
Read quitkey(SPACE)
gunsight(xm,ym,2,WHITE) @
stars @
ufo(ufox,ufoy,colorufo) @
rocket(rocketx,rockety,colorrocket) @
If (zm=1) explode(xm,ym) @
If (ym>0) Call cls
Loop
//---------------------- [Append Libraries] --------------------------
Append G:gunsight
Append G:ufo
Append G:rocket
Append G:stars
Append G:explode
